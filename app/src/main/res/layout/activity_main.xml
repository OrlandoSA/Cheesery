<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:src="@drawable/thecheezery"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:padding="20dp"
        android:src="@drawable/thecheezery"
        android:background="@color/purpleishGrey"
        android:orientation="vertical"
        android:scaleType="centerCrop">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:gravity="center"
            android:textColor="@color/dustyWhite"
            android:text="@string/welcome"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:textColor="@color/dustyWhite"
            android:text="@string/description"></TextView>

        <Button
            android:id="@+id/btn_principal"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dustyWhite"
            android:layout_gravity="center"
            android:text="@string/get_started"
            android:paddingHorizontal="50dp"
            android:textSize="24dp"
            android:background="@color/colorAccent"></Button>

    </LinearLayout>

</LinearLayout>