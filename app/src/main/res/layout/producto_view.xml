<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/producto_img"
        android:layout_margin="10dp"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/caramelfrap" />

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/producto_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caramel Frap"
            android:textSize="20sp"
            android:textColor="@color/titulo" />

        <TextView
            android:id="@+id/producto_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/subtitulo"
            android:textSize="8sp"
            android:text="Aquí va la descripción" />


    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/producto_precio"
        android:layout_weight="1"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:text="$5"
        android:textSize="19sp"
        android:textColor="@color/text" />


</LinearLayout>